{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,

		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"],
			"~/*": ["/*"],
			"@/*": ["/src"],
			"@lib/*": ["src/_lib/*"],
			"@style/*": ["src/style"],
			"@assets*": ["src/assets/*"],
			"@comp/*": ["src/components/*"],
			"@page/*": ["src/pages/*"],
			"@worker/*": ["/workers/*"],
		  "$public/*": ["/public/*"],
			"$config/*": ["/config/*"],
			"$scripts/*":["/scripts/*"],
			"$sw/*": ["/sw/*"],
			"%task/*": ["../task/*"],
			"%script/*": ["../scripts/*"]
		}
	},
	"include": ["node_modules/vite/client.d.ts", "**/*"]
}
